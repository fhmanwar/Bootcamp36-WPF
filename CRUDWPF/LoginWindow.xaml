<Window x:Class="CRUDWPF.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CRUDWPF"
        mc:Ignorable="d"
        Title="LoginWindow" Height="600" Width="1024">
    <Grid x:Name="GridMain">
        <Label x:Name="lblEmail" Content="Email" HorizontalAlignment="Left" Margin="302,212,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtEmail" HorizontalAlignment="Left" Height="26" Margin="302,241,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="237" />
        <Label x:Name="lblPass" Content="Password" HorizontalAlignment="Left" Margin="302,293,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.468,0.458"/>
        <TextBox x:Name="txtPass" HorizontalAlignment="Left" Height="26" Margin="302,322,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="237" />

        <Button x:Name="btnLogin" Content="Login" HorizontalAlignment="Left" Margin="361,404,0,0" VerticalAlignment="Top" Width="108" Click="btnLogin_Click" Height="46" />

    </Grid>
</Window>
